include button

mixin git()
  .gitOuter#git
    .git
      //- h1 Pop your email in the box below and we'll get in touch
      h1 Pop your email in the box and we'll get in touch
      //- h2.ocenter.oh2git  Pop in your email in the box or email directly
      //- h2.ocenter.oh2git Or you can email directly
      form(action="/subscribe" method="POST")
        .git__body
          //- .git__body-inner.git__body-inner-one
          //-   input(type="text" name="firstName" placeholder="Name *" class="inputName")
          .git__body-inner.git__body-inner-two
            input(type="text" name="email" placeholder="Email *" class="inputEmail")
            input(type="text" name="company" placeholder="School *" class="inputSchool")
          .git__body-inner.git__body-inner-two
            textarea(name="enquiry" placeholder="How can we help? (optional)" class="inputDesc")
        .git__submit
          a(href=`/subscribe` class=`eoSubmit`)
            .button SEND
              //- span.icons__buttonArrow!=icon("buttonArrow")
          //- +button("Submit", "/subscribe", "eoSubmit")
          .git__submit-red.gta__1
      .git__contact
        .git__contact-outer
          .git__contact-inner
            !=icon("mail")
            .git__contact-mail1 info@maximizeyourpotential.co.uk
          .git__contact-below.git__contact-below1 will reply in 24 hrs
        .git__contact-outer
          .git__contact-inner
            !=icon("phone")
            .git__contact-mail1 01243 572773
          .git__contact-below 9-5pm mon-fri