doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(http-equiv='X-UA-Compatible', content='ie=edge')
    link(rel='stylesheet', href='/dist/bundle.css')
    link(rel='icon', type='image/png', sizes='32x32', href='https://s3.eu-west-2.amazonaws.com/maximizeyp/MaximizeFavicon.png')
    meta(name='twitter:site', content='@maximizeyp')
    meta(property='og:site_name', content='Maximize Your Potential â€” Study skills')
    meta(name='twitter:card', content='summary_large_image')
    meta(property='og:image:height', content='630')
    meta(property='og:image:width', content='1200')
    meta(property='og:type', content='website')
    title #{card.title}
    meta(property='og:title', content=`${card.title}`)
    meta(name='twitter:title', content=`${card.title}`)
    meta(property='og:url', content=`https://www.maximizeyourpotential.co.uk/${card.slug}`)
    link(rel='canonical', href=`https://www.maximizeyourpotential.co.uk/${card.slug}`)
    meta(name='description', content=`${card.desc}`)
    meta(property='og:description', content=`${card.desc}`)
    meta(name='twitter:description', content=`${card.desc}`)
    meta(property='og:image', content=`https://maximizeyp.s3.eu-west-2.amazonaws.com/${card.img}`)
    meta(name='twitter:image', content=`https://maximizeyp.s3.eu-west-2.amazonaws.com/${card.img}`)
  body
    block content
  block scripts
    script(src="/dist/bundle.js")
